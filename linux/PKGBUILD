pkgbase=linux-chimeraos
pkgver=6.4.3.chos1
pkgrel=1
pkgdesc='Linux ChimeraOS'
_srctag=${pkgver%.*}
_srcpatch=${pkgver##*.}
url="https://github.com/ChimeraOS/linux-chimeraos"
arch=(x86_64)
license=(GPL2)
makedepends=(
  bc
  cpio
  gettext
  libelf
  pahole
  perl
  python
